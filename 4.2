Proceso sin_titulo
	Definir i, k, matriz Como entero;
	Dimension matriz[4,5];
	i<-0;
	k<-0;
	Mientras i<4 Hacer
		Mientras k<5 Hacer
			matriz(i,k)<-azar(100);
			k<-k+1;
			
		FinMientras
		k<-0;
		i<-i+1;
	FinMientras
	
	
	
	
	Escribir " ";
	Escribir sin saltar "Numeros pares:";
	Para i<-0 hasta 3 Con Paso 1 Hacer
		para k<-0 hasta 4 Con Paso 1 Hacer
			Si matriz(i,k) mod 2 = 0 Entonces
				Escribir  Sin Saltar matriz(i,k), " ";
			FinSi
			
			
			
			
		FinPara
	
		
	FinPara
	Escribir "";
	Escribir Sin Saltar "Numeros impares:";
	Para i<-0 hasta 3 Con Paso 1 Hacer
		para k<-0 hasta 4 Con Paso 1 Hacer
			Si matriz(i,k) mod 2 = 1 Entonces
				Escribir  Sin Saltar matriz(i,k), " ";
			FinSi
			
			
			
			
			
		FinPara
		
		
	FinPara
	Escribir "";
	
	
FinProceso
