FinSubProceso
SubProceso triangulo
	definir eleccion Como Entero;
	definir valor1, valor2, valor3, total Como Real;
	escribir "Indica la base de tu triangulo";
	leer valor1;
	Escribir "Indica la altura de tu triangulo';
	leer valor2;
	total<-(valor1*valor2)/2;
	Escribir "El area de tu triangulo es: ", total;
	
	
FinSubProceso

SubProceso trapecio
	definir eleccion Como Entero;
	definir valor1, valor2, valor3, total Como Real;
	escribir "Indica la medida de una de sus bases";
	leer valor1;
	Escribir "Indica la medida de su otra base";
	leer valor2;
	Escribir "Y por ultimo indica la altura de tu trapecio";
	leer valor3;
	total<-((valor1+valor2)*valor3)/2;
	Escribir "El area de tu trapecio es: ", total;
	
	
FinSubProceso