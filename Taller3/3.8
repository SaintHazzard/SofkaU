Proceso sin_titulo
	Definir eleccionmenu, elecestado, lugar Como Real;
	definir nombre, nombre1, nombre2, nombre3, nombre4, nombre5, nombre6, nombre7, nombre8, apro, desa Como Caracter;
	Definir estado1, estado2, estado3, estado4, estado5, estado6, estado7, estado8, estado Como Logico;
	nombre1<-"              ";
	nombre2<-"              ";
	nombre3<-"              ";
	nombre4<-"              ";
	nombre5<-"              ";
	nombre6<-"              ";
	nombre7<-"              ";
	nombre8<-"              ";
	estado1<-Falso;
	estado2<-Falso;
	estado3<-Falso;
	estado4<-Falso;
	estado5<-Falso;
	estado6<-Falso;
	estado7<-Falso;
	estado8<-Falso;
	apro<-"Aprobado";
	desa<-"Desaprobado";
	
	
	Repetir
		Limpiar Pantalla;
		mainmenu();
		leer eleccionmenu;
		
		Segun eleccionmenu Hacer
			
			
			1: repetir
					Limpiar Pantalla;
					Escribir "1. ", nombre1; Escribir "2. ", nombre2; Escribir  "3. ", nombre3; escribir "4. ", nombre4; Escribir "5. ", nombre5;
					Escribir "6. ", nombre6; Escribir "7. ", nombre7; Escribir "8. ", nombre8; Escribir "9. Volver"; Escribir "En que espacio desea registrar la informacion";
					leer lugar;
					Si lugar > 0 y lugar<9  Entonces
						Escribir "Nombre del cliente";
						leer nombre;
						Escribir "Estado del cliente";
						Escribir "1. Aprobado";
						Escribir "2. Reprobado";
						
						Repetir
							leer elecestado;
							Segun elecestado Hacer
								1: Escribir "Aprobado, "; sin saltar Escribir "Registro exitoso";
									estado<-Verdadero;
								2: escribir "Reprobado, "; sin saltar Escribir "Registro exitoso";
									estado<-Falso;
									
								De Otro Modo:
									Escribir "Opcion no valida";
									Escribir "1. Aprobado";
									Escribir "2. Reprobado";
									
									
							FinSegun
							Escribir "Presione cualquier tecla";
							Esperar Tecla;
							
						Hasta Que elecestado=1 o elecestado=2
						
					FinSi
					
					
					
					Segun lugar Hacer
						1: nombre1<-nombre;
							estado1<-estado;
							
						2: nombre2<-nombre;
							estado2<-estado;
							
						3:  nombre3<-nombre;
							estado3<-estado;
						4: nombre4<-nombre;
							estado4<-estado;
							
						5: nombre5<-nombre;
							estado5<-estado;
							
						6: nombre6<-nombre;
							estado6<-estado;
							
						7: nombre7<-nombre;
							estado7<-estado;
							
						8: nombre8<-nombre;
							estado8<-estado;
							
						9: lugar<-9;
							
							
							
					FinSegun
				Hasta Que lugar=9
			2: Escribir "Registro de estado de usuarios"; Escribir "Verdadero: Aprobado      Falso: Reprobado";
				Escribir "1. ", nombre1 ; Sin Saltar escribir ": ", estado1; Escribir "2. ", nombre2, ": ", estado2; Escribir "3. ", nombre3, ": ", estado3; Escribir "4. ", nombre4, ": ", estado4; 
				Escribir "1. ", nombre5,": ",	 estado5;Escribir "1. ", nombre6, ": ", estado6;Escribir "1. ", nombre7, ": ", estado7;Escribir "1. ", nombre8, ": ", estado8;
				Esperar Tecla;
				
				
				
				
				
				
				
				
		FinSegun
		
		
	Hasta Que eleccionmenu=3;
	
	
FinProceso

