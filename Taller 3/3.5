SubProceso menubucle
	Definir eleccions Como Caracter;
	Definir eleccion  como real;
	Definir name Como Caracter;
	Repetir
		Escribir "Menu de usuario";
		Escribir "1. Captura nombre";
		Escribir "2. Saludar persona";
		Escribir "3. Salir del sistema";
		leer eleccions;
		eleccion<-ConvertirANumero(eleccions);
		
		Si eleccion=1 Entonces
			Escribir "Como es tu nombre?";
			Leer name;
			
			
		FinSi
		Si eleccion=2 Entonces
			Escribir "Hola ", name;
		FinSi
		Si eleccion >= 4 Entonces
			Escribir "Eleccion invalida, digite una correcta";
		FinSi
		Si eleccion=3 Entonces
			Escribir "Cerrando programa";
		FinSi
		
	Hasta Que eleccion=3
FinSubProceso
